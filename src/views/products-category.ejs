<%- include("./partials/head") %> <%- include("./partials/header-adm") %>

<main id="container-principal-product">
  <div class="way">
    <h5><a href="/category/">Categoria</a></h5>
    <h5>- Produtos da categoria: <%=category.name%></h5>
  </div>
  <!-- <div class="add-item">
    <form action="/product/create" method="get">
      <button type="submit">Adicionar</button>
    </form>
  </div> -->

  <%- include("./partials/search") %> <% if (listProducts.length > 0) { %>
  <div class="table">
    <% listProducts.forEach(product => { %> <% if(product.is_active === 1) { %>

    <div class="box">
      <div class="img-product">
        <img src=" <%= product.Image.image %> " alt="" />
        <div class="name-product">
          <h3><%= product.name %></h3>
        </div>
      </div>

      <div class="description">
        <h4>Descrição:</h4>
        <h5><%= product.description %></h5>
      </div>
      <div class="price">
        <h4>Preço:</h4>
        <h5><%= product.price %></h5>
      </div>
    </div>
    <% } %> <% }) %>
  </div>
  <% }else {%>
  <!-- <h2 class="error-alert">Nenhum produto encontrado!!</h2> -->
  <% } %>
</main>

<%- include("./partials/footer-adm") %>
