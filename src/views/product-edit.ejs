<%- include("./partials/head") %>
    <%- include("./partials/header-adm") %>
        <div class="way">
            <h5><a href="/product/">Produto</a></h5>
            <h5> - Atualizar produto</h5>
        </div>

        <main class="container-main">
            <section id="container-form">
                <% if(locals.error){ %>
                    <h2 class="error-alert">
                        <%= error.message %>
                    </h2>
                    <% } %>

                        <div class="success-alert">
                            <%= locals.message %>
                        </div>
                        <form action="/product/edit/<%= product.id %>?_method=put" method="post" enctype="multipart/form-data">
                            <label for="nome">Nome:</label>
                            <input value="<%= product.name %>" type="text" name="nome" />
                            <label for="nome">Descrição:</label>
                            <input value="<%= product.description %>" type="text" name="descricao" />
                            <label for="nome">Preço:</label>
                            <input value="<%= product.price.replace('.', ',') %>" onkeyup="precoMask()" class="money" type="text" name="preco" />
                            <label for="categoria">Categoria:</label>
                            <input value="<%= product.category_id %>" type="text" name="categoria" />
                            <label for="categoria">Quantidade:</label>
                            <input value="<%= product.quantity %>" type="text" name="quantidade" />
                            <label for="productImage">Imagem do produto:</label>
                            <input value="<%= product.Image.image %>" type="file" name="productImage" />

                            <button type="submit">Atualizar</button>
                        </form>

            </section>
        </main>

        <%- include('./partials/footer-adm') %>