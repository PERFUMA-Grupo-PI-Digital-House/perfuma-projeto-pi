<%- include("./partials/head")%>
    <%- include("./partials/header-adm")%>
        <div class="way">
            <h5><a href="/product/">Produto</a></h5>
            <h5> - Deletar produto</h5>
        </div>
        <main class="container-main">
            <section id="container-form">

                <div class="success-alert">
                    <%= locals.message %>
                </div>
                
                <% if(locals.product){ %>
                    <div class="box">
                        <div class="img-product">
                            <img src="<%= product.Image.image %> " alt="">
                            <div>
                                <h3>
                                    <%= product.name %>
                                </h3>
                            </div>
                        </div>
                        <div class="description">
                            <h4>Descrição:</h4>
                            <h5>
                                <%= product.description %>
                            </h5>
                        </div>
                        <div class="price">
                            <h4>Preço:</h4>
                            <h5>R$ <%= product.price %>
                            </h5>
                        </div>
                    </div>

                    <form action="/product/delete/<%= product.id %>?_method=delete" method="post" class="form-delete" >
                        <h3>Deseja deletar esse produto?</h3>
                        <a href="/product"><button type="button">Não</button></a>
                        <button type="submit">Sim</button>
                    </form>
                    <% }else {%>
                        <h2 class="error-alert">Produto não encontrado!</h2>
                        <% } %>
            </section>
        </main>
        <%- include("./partials/footer-adm")%>