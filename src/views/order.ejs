<%- include("./partials/head") %> <%- include("./partials/header-adm") %>

<main id="container-principal-product">
  <div class="way">
    <h5><a href="/order/">Pedidos</a></h5>
    <h5>- Cliente: <%= order.User.name %></h5>
  </div>
  
  <section id="container-form">
    <div class="order-show">
      <h3>Produtos do pedido</h3>
    </div>
    <div class="table">
      <% for (let product of order.Products) { %>
      <div class="box">
        <div class="img-product">
          <img src=" <%= product.image %> " alt="" />
          <div class="name-product">
            <h3><%= product.name %></h3>
          </div>
        </div>
        <div class="description">
          <h4>Descrição:</h4>
          <h5><%= product.description %></h5>
        </div>
        <div class="price">
          <h4>Preço:</h4>
          <h5><%= product.price %></h5>
        </div>
      </div>
      <% } %>
    </div>
  </section>
</main>

<%- include("./partials/footer-adm") %>
