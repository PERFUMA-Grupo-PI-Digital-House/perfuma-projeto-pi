<%- include("./partials/head") %>

    <%- include("./partials/header-adm") %>

        <main id="container">
            
            <h2>Lista de usuários</h2>
            <% if(users.length> 0) { %>
                <div>
                    <table>
                        <thead>
                            <tr>
                                <th>Nome</th>
                                <th>Sobrenome</th>
                                <th>Email</th>
                                <th>Ação</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% for (let user of users) { %>
                                <tr>
                                    <td>
                                        <%= user.nome %>
                                    </td>
                                    <td>
                                        <%= user.sobrenome %>
                                    </td>
                                    <td>
                                        <%= user.email %>
                                    </td>
                                    <td class="table-actions">
                                        <a href="/user/<%= user.id %>" class="table-link-show" href="">Visualizar</a>
                                        <a href="/user/edit/<%= user.id %>" class="table-link-edit" href="">Editar</a>
                                        <a href="/user/delete/<%= user.id %>" class="table-link-delete"
                                            href="">Excluir</a>
                                    </td>
                                </tr>
                                <% } %>
                        </tbody>
                    </table>
                </div>
                <% } else { %>
                    <h2 class="error-alert">Nenhum usuário encontrado!!</h2>
                    <% } %>
        </main>

        <%- include("./partials/footer-adm") %>