<%- include("./partials/head") %>

    <main>
        <div id="container-principal-adm">

            <nav class="navbar navbar-expand-md navbar-light navbar-transparente">

                <a href="/" class="navbar-brand">
                    <h5>Administrador</h5>
                </a>

                <button class="navbar-toggler" data-toggle="collapse" data-target="#nav-principal">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="nav-principal">

                    <ul class="navbar-nav ml-auto">

                        <li class="navbar-item">
                            <a href="/login" class="nav-link">Clientes</a>
                        </li>

                        <li class="navbar-item divisor d-none d-md-block"></li>

                        <li class="navbar-item">
                            <a href="/register" class="nav-link">Produtos</a>
                        </li>

                        <li class="navbar-item divisor d-none d-md-block"></li>

                        <li class="navbar-item">
                            <a href="/login" class="nav-link">Categoria</a>
                        </li>

                        <li class="navbar-item divisor d-none d-md-block"></li>

                        <li class="navbar-item">
                            <a href="/register" class="nav-link">Pedidos</a>
                        </li>

                        <li class="navbar-item divisor d-none d-md-block"></li>


                        <li class="navbar-item">
                            <a href="/logout" class="nav-link">Sair</a>
                        </li>

                    </ul>

                </div>

            </nav>

            <div class="center-adm">
                <div class="header-adm">
                    <div class="header-top-adm">
                        <img src="/img/do-utilizador.png" alt="">
                        <% if (locals.user) {%>
                            <h3>Olá - <%= locals.user %>
                            </h3>
                            <% }%>
                    </div>
                    <div class="logo-adm">
                        <img src="/img/logo6.png" alt="">
                    </div>
                </div>

                <div class="caminho-adm">
                    <h5>Produtos</h5>
                    <!-- <h5>/</h5> -->
                </div>
                <div class="adicionar-item-adm">
                    <form action="/product/create" method="get">
                        <button type="submit">Adicionar</button>
                    </form>
                </div>

                <div class="in-table-adm">

                    <input type="search" name="" id="" placeholder="Pesquisar...">
                    <img src="/img/lupa.png" alt="">

                </div>
            </div>

            <% if(listProducts.length> 0) { %>
                <div class="table">

                    <% for (let product of listProducts) { %>
                        <div class="box">
                            <div class="img-product">
                                <img src="./img/1.png" alt="">
                                <div>
                                    <h3>
                                        <%= product.nome %>
                                    </h3>
                                </div>
                            </div>
                            <div class="description">
                                <h4>Descrição:</h4>
                                <h5>
                                    <%= product.descricao %>
                                </h5>
                            </div>
                            <div class="price">
                                <h4>Preço:</h4>
                                <h5>R$ <%= product.preco %>
                                </h5>
                            </div>
                            <div class="btn-adm">
                                <button type="button">
                                    <img src="/img/pen.png" alt="">
                                </button>
                                <button type="button">
                                    <img src="/img/lata-de-lixo.png" alt="">
                                </button>
                            </div>
                        </div>
                        <% } %>

                </div>
                <% } else { %>
                    <h2 class="error-alert">Nenhum produto encontrado!!</h2>
                    <% } %>


        </div>
    </main>
    <%- include("./partials/footer-adm") %>